{% extends 'layouts/page.njk' %}

{% block content %}
  {{ appHeading({
    text: heading,
    caption: "View History For MRN " + mrn
  }) }}


  {% call govukFieldset({
    legend: {
      text: "Checks",
      classes: "govuk-fieldset__legend--l",
      isPageHeading: false
    }
  }) %}

    {{ appEntityList({
        headings: [
          { text: "Item", size: "small" },
          { text: "Check Code", size: "small" },
          { text: "Document Ref", size: "large" },
          { text: "Btms Decision", size: "small" },
          { text: "Btms Decision Number", size: "small" },
          { text: "Alvs Decision", size: "small" },
          { text: "Alvs Decision Number", size: "small" },
          { text: "System Time", size: "medium" }
        ],
        entityRows: checks,
        noResult: "There are no checks on this movement"
      }) }}
  {% endcall %}

  {% call govukFieldset({
    legend: {
      text: "History",
      classes: "govuk-fieldset__legend--l",
      isPageHeading: false
    }
  }) %}

    {{ appEntityList({
        headings: [
          { text: "Source", size: "small" },
          { text: "Status", size: "small" },
          { text: "Type", size: "medium" },
          { text: "ID", size: "large" },
          { text: "Version", size: "small" },
          { text: "Source Time", size: "large" }
        ],
        entityRows: history,
        noResult: "There is no history available at the moment"
      }) }}
  {% endcall %}

{% endblock %}
